<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Malmungchi" parent="android:Theme.Material.Light.NoActionBar">
        <!-- 창 전체 바탕색 -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- 상태바 / 내비게이션바 흰색 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>


    </style>

    <!-- ✅ 스플래시 테마 (Android 12+ & 백포트) -->
    <style name="Theme.Malmungchi.Splash" parent="Theme.SplashScreen">
        <!-- 표시할 로고 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_start</item>
        <!-- 배경색 -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- 스플래시 종료 후 적용할 앱 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.Malmungchi</item>
    </style>


</resources>